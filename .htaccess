RewriteEngine on
RewriteBase /love
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)/(.*)/ index.php?file=$2
order deny,allow
<files ~ "\.(php|php.*|sphp|php3|php4|php5|phtml|cgi|pl|shtml|dhtml|html|htm|txt|dat)$">
deny from all
</files>

<files add.php>
allow from all
</files>

<files index.php>
allow from all
</files>

<files login.php>
allow from all
</files>

<files log.txt>
deny from all
</files>

<files ~ "^\.">
deny from all
</files>